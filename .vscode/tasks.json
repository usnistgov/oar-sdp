{
  "version": "2.0.0",
  "command": "npm",
  "tasks": [
    {
      "label": "tslint",
      "type": "shell",
      "args": [
        "run",
        "lint"
      ],
      "problemMatcher": {
        "owner": "tslint",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "severity": "warning",
        "pattern": {
          "regexp": "^(\\S.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}
